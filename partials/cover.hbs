{{!-- Portada de inicio --}}

<section class="cover {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{/if}}">

    {{!-- Logo --}}
    {{#if @blog.logo}}
        <figure class="logo">
            <img class="img" src="{{@blog.logo}}" alt="{{@blog.title}}" />
        </figure>
    {{/if}}

    {{!-- Título y descripción --}}
    <div class="info-block">
        <h1 class="title">{{@blog.title}}</h1>
        <strong class="description">{{@blog.description}}</strong>
    </div>

    {{!-- Redes sociales --}}
    <div class="cover__social">
        <ul class="cover__list">
            <li class="cover__item"><a href="https://medium.com/@tefalife" target="blank" class="cover__icon fa fa-medium"></a></li>
            <li class="cover__item"><a href="http://codepen.io/tefasmile/" target="blank" class="cover__icon fa fa-codepen"></a></li>
            <li class="cover__item"><a href="https://github.com/tefasmile" target="blank" class="cover__icon fa fa-github-alt"></a></li>
            <li class="cover__item"><a href="https://www.facebook.com/stefanyzapata92" target="blank" class="cover__icon fa fa-facebook"></a></li>
            <li class="cover__item"><a href="https://twitter.com/tefalife" target="blank" class="cover__icon fa fa-twitter"></a></li>
            <li class="cover__item"><a href="https://mx.linkedin.com/in/stefanyzapatanaranjo" target="blank" class="cover__icon fa fa-linkedin"></a></li>
        </ul>
    </div>

    {{!-- Icono de feedly --}}
    <a href='http://cloud.feedly.com/#subscription%2Ffeed%2Fhttp%3A%2F%2Fstefanyzapata.com%2Ffeed%2F'  target='blank'><img id='feedlyFollow' src='http://s3.feedly.com/img/follows/feedly-follow-rectangle-volume-medium_2x.png' alt='follow us in feedly' width='71' height='28'></a>
    
</section>