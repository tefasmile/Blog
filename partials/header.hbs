<header class="header">

    <div class="header-wrap wrap-center">

        {{!-- Logo - Nombre - Nav --}}
        <div class="header__title">
            <a href="http://stefanyzapata.com/" class="header__name title">
                <strong class="header__name title">{{@blog.title}}</strong>
            </a>
            <nav class="nav">
                <ul class="header__list">
                    {{navigation}}
                </ul>
            </nav>
        </div>
        
        {{!-- Iconos: Men√∫ - Busqueda --}}
