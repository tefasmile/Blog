{{!-- Lenguajes para aprender --}}
<section class="code">
    <strong class="code__title">¿Qué te gustaría aprender hoy?</strong>
    
    <section class="code__languages">
        
        {{!-- web --}}
        <figure>
            <a href="/tag/web/">
                <img src='{{asset "images/dev-desktop.jpg"}}' 
                     srcset='{{asset "images/dev-mobile.jpg"}} 412w,
                             {{asset "images/dev-tablet.jpg"}} 1080w'
                     alt="web" />
            </a>
        </figure>

        {{!-- mkt --}}
        <figure>
            <a href="/tag/marketing/">
                <img src='{{asset "images/mkt_desktop.jpg"}}' 
                     srcset='{{asset "images/mkt_mobile.jpg"}} 412w,
                             {{asset "images/mkt_tablet.jpg"}} 1080w'
                     alt="marketing" />
            </a>
        </figure>

    </section>
</section>

